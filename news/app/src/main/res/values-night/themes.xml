<resources>
    <!-- Base application theme. -->
    <style name="Theme.AndreaNews" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
        <item name="actionModeStyle">@style/Theme.AndreaNews.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.AndreaNews.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/primaryColor</item>
    </style>
</resources>