<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="roundedImageThumbnailView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Feed list item style -->
    <style name="TextAppearance.AndreaNews.ItemFeed.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextAppearance.AndreaNews.ItemFeed.Content" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Feed detail item style -->
    <style name="TextAppearance.AndreaNews.DetailFeed.Title" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.AndreaNews.DetailFeed.Content" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Action mode text style -->
    <style name="TextAppearance.AndreaNews.ActionMode.TextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <!-- Collapsing toolbar style -->
    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>